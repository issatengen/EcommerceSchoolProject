{% extends 'base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
    {{ include('partials/admin_navbar.html.twig') }}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0 h2">Edit Category</h1>
            <a href="{{ path('app_category') }}" class="btn btn-secondary">
                <i class="fa fa-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>
    <hr class="my-1">
    <div class="row container mt-2">
        <div class="col-md-12 mb-4">
            <p class="text-center text-muted">Update the form below to modify the category details.</p>
        </div>
        <div class="col-md-6 bg-light p-4 rounded shadow">
            {{ form_start(form) }}
            <div class="mb-3">
                <label for="category_label" class="form-label">Label</label>
                {{ form_widget(form.label, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                <label for="category_description" class="form-label">Description</label>
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button class="btn btn-primary" type="submit">{{ button_label|default('Update') }}</button>
            {{ form_end(form) }}
        </div>
        <div class="col-md-6 text-center">
            <i class="fa-solid fa-folder-open fa-5x text-primary"></i>
            <h2 class="mt-5">Why Edit a Category?</h2>
            <p class="lead">Keep your product organization up to date and relevant.</p>
            <p class="text-muted">Editing categories helps maintain a clear and efficient navigation for your users.</p>
        </div>
    </div>
{% endblock %}