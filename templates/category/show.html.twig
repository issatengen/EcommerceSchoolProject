{% extends 'base.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
{{ include('partials/admin_navbar.html.twig') }}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Category Details</h4>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th class="w-25">Id</th>
                                <td>{{ category.id }}</td>
                            </tr>
                            <tr>
                                <th>Code</th>
                                <td>{{ category.code }}</td>
                            </tr>
                            <tr>
                                <th>Label</th>
                                <td>{{ category.label }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ category.description }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-white d-flex justify-content-between">
                    <a href="{{ path('app_category') }}" class="btn btn-outline-secondary">
                        <i class="fa fa-arrow-left me-1"></i> Back to list
                    </a>
                    <div>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-outline-primary me-2">
                            <i class="fa fa-edit me-1"></i> Edit
                        </a>
                        {{ include('category/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
