{% extends 'base.html.twig' %}

{% block title %}Item index{% endblock %}

{% block body %}
    {{ include('partials/admin_navbar.html.twig') }}
    <div class="container mb-4 mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">Product</h1>
            <a href="{{ path('app_item_new') }}" class="btn btn-primary">
                <i class="fa fa-plus me-1"></i> Create New
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th>Code</th>
                            <th>Designation</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.code }}</td>
                            <td>{{ item.designation }}</td>
                            <td>{{ item.price|number_format(0, '.', ',') }} FCFA</td>
                            <td>{{ item.category.label }}</td>
                            <td>{{ item.description }}</td>
                            <td>
                                <a href="{{ path('app_item_show', {'id': item.id}) }}" class="btn btn-outline-secondary btn-sm me-1">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a href="{{ path('app_item_edit', {'id': item.id}) }}" class="btn btn-outline-primary btn-sm">
                                    <i class="fa fa-edit"></i>
                                </a>    
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
