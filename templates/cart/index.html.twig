{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Your orders</h1>
        {# <a href="{{ path('app_category_new') }}" class="btn btn-primary">
            <i class="fa fa-plus me-1"></i> Create New
        </a> #}
    </div>
    <div class="card shadow-sm">
        <div class="card-body p-0">
            {% if orders is defined and orders|length > 0 %}
            <table class="table table-hover mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Id</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.user.name }}</td>
                        <td>{{ order.date|date('Y-m-d H:i') }}</td>
                        <td>{{ order.status|default('Paid') }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_show_order', {'id': order.id}) }}" class="btn btn-outline-secondary btn-sm me-1">
                                <i class="fa fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted">No records found</td>
                </tr>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
