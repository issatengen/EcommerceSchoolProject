{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
{{ include('partials/admin_navbar.html.twig') }}
<div class="container py-4">    
    <h1 class="mb-4">User Details</h1>
    <div class="mb-3">
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
            <i class="fa fa-arrow-left me-1"></i> Back to list
        </a>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">
            <i class="fa fa-edit me-1"></i> Edit
        </a>
        {{ include('user/_delete_form.html.twig') }}
    </div>

    {% if app.user %}
        <div class="alert alert-info">
            <strong>Details of the user:</strong> {{ user.name|default(user.email) }}
        </div>
    {% endif %}
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">User Information</h5>
            <p class="card-text">Here are the details of the user:</p>
        </div>
        <div class="card-footer">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>ID:</strong> {{ user.id }}</li>
                <li class="list-group-item"><strong>Email:</strong> {{ user.email }}</li>
                <li class="list-group-item"><strong>Name:</strong> {{ user.name }}</li>
                <li class="list-group-item"><strong>Roles:</strong> {{ user.roles ? user.roles|join(', ') : 'None' }}</li>
                <li class="list-group-item"><strong>Code:</strong> {{ user.code }}</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
