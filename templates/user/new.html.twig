{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
{{ include('partials/admin_navbar.html.twig') }}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0 h2">Create New User</h1>
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                <i class="fa fa-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>
    <hr class="my-1">
    <div class="row container mt-2">
        <div class="col-md-12 mb-4">
            <p class="text-center text-muted">Fill out the form below to add a new user.</p>
        </div>
        <div class="col-md-6 bg-light p-4 rounded shadow">
            {{ form_start(form) }}
            <div class="mb-3">
                <label for="user_username" class="form-label">Username</label>
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                <label for="user_email" class="form-label">Email</label>
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                <label for="user_password" class="form-label">Password</label>
                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                <label for="user_role" class="form-label">Role</label>
                {{ form_widget(form.role, {'attr': {'class': 'form-select'}}) }}
            </div>
            <button class="btn btn-primary" type="submit">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>
        <div class="col-md-6 text-center">
            <i class="fa-solid fa-user-plus fa-5x text-primary"></i>
            <h2 class="mt-5">Why Create a User?</h2>
            <p class="lead">Manage your customers and enhance their shopping experience.</p>
            <p class="text-muted">Users can track orders, save preferences, and receive personalized offers.</p>
        </div>
    </div>

    <a href="{{ path('app_user_index') }}">back to list</a>
{% endblock %}
