{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
{{ include('partials/admin_navbar.html.twig') }}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Users</h1>
        <a href="{{ path('app_user_new') }}" class="btn btn-primary">
            <i class="fa fa-plus me-1"></i> Create New
        </a>
    </div>
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Password</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.email }}</td>
                        <td>
                            {% if user.role %}
                                <span class="badge bg-info text-dark">{{ user.role.label }}</span>
                            {% endif %}
                        </td>
                        <td>
                            <span class="text-muted" style="font-size:0.9em;">••••••••</span>
                        </td>
                        <td>{{ user.code }}</td>
                        <td>{{ user.name }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-outline-secondary btn-sm me-1">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-outline-primary btn-sm">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center text-muted">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
